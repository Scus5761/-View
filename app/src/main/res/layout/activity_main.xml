<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:scus="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.scus.selfdrawbreathview.BreathView
        android:id="@+id/breathView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        scus:coreColor="#049CDB"
        scus:coreRadius="200"
        scus:diffuseColor="#66049CDB"
        scus:duration="2500"
        scus:innerColor="#4D049CDB"
        scus:innerRadius="80"
        scus:outerRadius="70" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:padding="10dp"
        android:textSize="20sp"
        android:lineSpacingExtra="5dp"
        android:textColor="@android:color/white"
        android:text="自定义\n水波效果" />


</RelativeLayout>
